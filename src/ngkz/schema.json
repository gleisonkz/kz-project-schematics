{
  "$schema": "http://json-schema.org/schema",
  "$id": "NewRepoSchematic",
  "title": "ng new options schema",
  "type": "object",
  "description": "Initialize a new project",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the project",
      "x-prompt": "What do you want to call your project?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "prefix": {
      "type": "string",
      "description": "Project prefix",
      "x-prompt": "What should be the prefix of the project",
      "default": "app",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "shouldCreateCoreLayer": {
      "type": "boolean",
      "description": "Include the core layer",
      "x-prompt": "Should core layer be included?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "shouldCreateSharedLayer": {
      "type": "boolean",
      "description": "Include the shared layer",
      "x-prompt": "Should shared layer be included?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "shouldCreateWidgetLayer": {
      "type": "boolean",
      "description": "Include the widget layer",
      "x-prompt": "Should widget layer be included?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "shouldCreateDomainLayer": {
      "type": "boolean",
      "description": "Include the domain layer",
      "x-prompt": "Should domain layer be included?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  }
}
